{% extends 'base.html.twig' %}

{% block title %}Calculator{% endblock %}

{% block body %}
  <div class="container-fluid calculator mt-5">
    <div class="row mt-1">
      <div class="col">
        <input id="calculator-screen" class="input-group text" value="0" type="text"/>
      </div>
    </div>
    <div class="row mt-1">
      <div class="col text-center calculator-key number">7</div>
      <div class="col text-center calculator-key number">8</div>
      <div class="col text-center calculator-key number">9</div>
      <div class="col text-center calculator-key bg-light operator" data-action="divide">/</div>
    </div>
    <div class="row mt-1">
      <div class="col text-center calculator-key number">4</div>
      <div class="col text-center calculator-key number">5</div>
      <div class="col text-center calculator-key number">6</div>
      <div class="col text-center calculator-key bg-light operator" data-action="multiply">*</div>
    </div>
    <div class="row mt-1">
      <div class="col text-center calculator-key number">1</div>
      <div class="col text-center calculator-key number">2</div>
      <div class="col text-center calculator-key number">3</div>
      <div class="col text-center calculator-key bg-light operator" data-action="substract">-</div>
    </div>
    <div class="row mt-1">
      <div class="col text-center calculator-key number">0</div>
      <div class="col text-center calculator-key operator" data-action="decimal">.</div>
      <div class="col text-center calculator-key bg-primary operator" data-action="equal">=</div>
      <div class="col text-center calculator-key bg-light operator" data-action="add">+</div>
    </div>
    <div class="row mt-1">
      <div class="col text-center calculator-key bg-warning operator" data-action="clear">AC</div>
    </div>
    <div id="dump" class="row alert mt3">
    </div>
    <div id="result" class="row alert mt3">
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  <script src="{{ asset("js/simpleCalculator.js") }}" type="text/javascript"></script>
{% endblock %}